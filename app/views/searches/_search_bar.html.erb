<div class="d-flex align-items-center justify-content-center">
    <% if user_signed_in? %>
    <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field (:word) %>
        <%= f.select 'range' , options_for_select([['---選択してください---', ''], ['Books', '1'], ['Users', '2']]) %>
        <%= f.select 'search', options_for_select([["前方一致","forward_match"], ["後方一致","backward_match"], ["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
        <%= f.submit "キーワード検索", class:"btn btn-primary" %>
    <% end %>
    <% end %>

    <%# 間を開けるための特殊文字 %>
    &emsp;

    <%= form_with url: search_tag_path, local: true, method: :get do |f| %>
        <%= f.text_field :tag %>
        <%= f.submit "タグ検索", class: "btn btn-primary" %>
    <% end %>
</div>