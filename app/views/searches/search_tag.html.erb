
<div class='container px-5 px-sm-0'>
<%= render 'searches/search_bar' %>
  <div class='row'>
    <div class='col-md-3'>
    </div>
    <div class='col-md-8 offset-md-1'>
    </div>
  </div>
  <h2>Books search for "<%= @tag %>"</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>tag</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book|%>
          <tr>
              <td>
                  <%= link_to user_path(book.user) do %>
                      <%= image_tag book.user.get_profile_image(40,48) %>
                  <%end%>
              </td>
              <td>
                  <%= link_to book.title ,book_path(book)%>
              </td>
              <td>
                <%= book.body%>
              </td>
              <td><%= link_to book.tag ,search_tag_path(tag: book.tag)%></td>
              <td class=<%= "favorite-" + book.id.to_s %> >
              <%= render "favorites/btn", book: book %>
              </td>
              </td>
              <td>コメント数:<%=book.book_comments.count %></td>
                <td><div id="star-rate<%= book.id%>"></div></td>
                <script>
                  $('#star-rate<%= book.id%>').raty({
                    size      : 36,
                    starOff   : '<%= asset_path('star-off.png') %>',
                    starOn    : '<%= asset_path('star-on.png') %>',
                    starHalf:     '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= book.star %>,
                  });
                </script>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>